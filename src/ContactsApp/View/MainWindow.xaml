<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:vm="clr-namespace:View.ViewModel"
        mc:Ignorable="d"
        Title="Contacts Application" Height="450" Width="800" Icon="/contacts_96x96.ico">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    
    <Window.Resources>
        <vm:BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Разделитель -->
        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" Width="3"/>

        <!-- Левая колонка -->
        <Grid Grid.Column="0" Background="#f8f8f8">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Список и поиск -->
                <Grid Grid.Row="0">
                    <Label Content="Find:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <TextBox x:Name="SearchTextBox" Margin="38,6,0,0" VerticalAlignment="Top"/>
                    <ListBox SelectedItem="{Binding SelectedContact}" IsTextSearchEnabled="False" DisplayMemberPath="Name" Margin="0,29,0,0" ItemsSource="{Binding Contacts}"/>
                </Grid>
                
                <!-- Кнопки -->
                <Grid Grid.Row="1" Margin="0, 3, 0, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition />
                        <ColumnDefinition Width="3"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="AddButton" Command="{Binding AddCommand}" Content="Add" Grid.Column="0"/>
                    <Button x:Name="EditButton" Command="{Binding EditCommand}" IsEnabled="{Binding SelectedContact}" Content="Edit" Grid.Column="2"/>
                    <Button x:Name="RemoveButton" Command="{Binding RemoveCommand}" IsEnabled="{Binding SelectedContact}" Content="Remove" Grid.Column="4"/>
                </Grid>
            </Grid>
        </Grid>
        
        <!-- Правая колонка -->
        <Grid Grid.Column="2">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="3"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Картинка -->
                <Grid Margin="0, 19, 0, 0">
                    <Image Width="100" Height="100" VerticalAlignment="Top" Source="/new_contact.jpg"/>
                </Grid>
                
                <!-- Инфо -->
                <StackPanel Grid.Column="3" Grid.Row="0">
                    <TextBlock Text="Name:" Height="16"/>
                    <TextBox Text="{Binding SelectedContact.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 3, 0, 3"/>
                    <TextBlock Text="Phone Number:" Height="16"/>
                    <TextBox Text="{Binding SelectedContact.Phone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 3, 0, 3"/>
                    <TextBlock Text="Email" Height="16"/>
                    <TextBox Text="{Binding SelectedContact.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0, 3, 0, 3"/>
                </StackPanel>
                
                <!-- Кнопка Apply -->
                <Button Grid.Column="2" Grid.Row="3" Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibility}}" Command="{Binding ApplyCommand}" Content="Apply" Width="75" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
